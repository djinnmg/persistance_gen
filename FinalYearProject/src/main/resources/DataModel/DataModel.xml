<?xml version="1.0" encoding="UTF-8"?>
<entities>
	<entity name="user">
		<property id="true" name="id" type="long"/>
		<!--if id attribute is set, property is assumed to be not nullable-->
		<property name="name" type="string" nullable="false" />
	</entity>
	<entity name="project">
		<property id="true" name="id" type="long" serialise="false"/>
		<property name="title" type="string"/>
		<property name="users" type="user" incoming="projectForUser" mapping="OneToMany" serialise="false" />
			<!--If a mapping is specified for a simple type an error will be thrown-->
			<!--Initially serialisation of complex types won't be supported.
				A query which returns a list of ids followed by requests to serialise the associated objects should be used instead-->
		<property name="description" type="string" textArea="true"/>
		<!--For strings, if more than 15 characters long the textArea boolean will make the web ui more tidy-->
		<property name="created" type="date"/>
		<!--Will use Joda DateTime for dates.
				Cannot use Joda DateTime with jaxb types so this will need to be accounted for with marshalling-->
	</entity>
</entities>
